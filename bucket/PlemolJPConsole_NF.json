{
    "version": "3.0.0",
    "description": "PlemolJP is a Japanese programming font created by combining IBM Plex Mono and IBM Plex Sans JP.",
    "homepage": "https://github.com/yuru7/PlemolJP",
    "license": "OFL-1.1",
    "hash": "887e2d0db714d41ac26ab924bdd3a172b922f57b2b480af01e0147180eac3d80",
    "autoupdate": {
        "url": "https://github.com/yuru7/PlemolJP/releases/download/v$version/PlemolJP_NF_v$version.zip"
    },
    "checkver": "github",
    "installer": {
        "script": [
            "Get-ChildItem $dir\\PlemolJPConsole_NF -filter '*.ttf' | ForEach-Object {",
            "   $fontDir = \"$env:LocalAppData\\Microsoft\\Windows\\Fonts\"",
            "   New-ItemProperty -Path 'HKCU:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Fonts' -Name $_.Name -Value \"$fontDir\\$($_.Name)\" -Force | Out-Null",
            "   Copy-Item $_.Fullname -Destination \"$fontDir\"",
            "}"
        ]
    },
    "pre_install": [
        "Move-Item -Path \"$dir\\PlemolJP_NF_v$version\\*\" -Destination \"$dir\"",
        "Remove-Item -Path \"$dir\\PlemolJP_NF_v$version\" -Force"
    ],
    "uninstaller": {
        "script": [
            "Get-ChildItem $dir\\PlemolJPConsole_NF -filter '*.ttf' | ForEach-Object {",
            "   $fontDir = \"$env:LocalAppData\\Microsoft\\Windows\\Fonts\"",
            "   Remove-ItemProperty -Path 'HKCU:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Fonts' -Name $_.Name -Force -ErrorAction SilentlyContinue",
            "   Remove-Item \"$fontDir\\$($_.Name)\" -Force -ErrorAction SilentlyContinue",
            "}"
        ]
    },
    "url": "https://github.com/yuru7/PlemolJP/releases/download/v3.0.0/PlemolJP_NF_v3.0.0.zip"
}
