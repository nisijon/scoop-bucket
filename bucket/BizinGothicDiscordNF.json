{
    "version": "0.0.4",
    "description": "BizinGothicDiscordNF is a Japanese programming font inspired by Ricty and created by combining BIZ UDGothic and Inconsolata, that embeds the Nerd Font set.",
    "homepage": "https://github.com/yuru7/bizin-gothic",
    "license": "OFL-1.1",
    "hash": "027982bfbd535d411f03f7bf603545493516eb51a98b49616053e926b9211215",
    "autoupdate": {
        "url": "https://github.com/yuru7/bizin-gothic/releases/download/v$version/BizinGothicNF_v$version.zip"
    },
    "checkver": "github",
    "installer": {
        "script": [
            "Get-ChildItem $dir -filter 'BizinGothicDiscordNF*.ttf' | ForEach-Object {",
            "   $fontDir = \"$env:LocalAppData\\Microsoft\\Windows\\Fonts\"",
            "   New-ItemProperty -Path 'HKCU:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Fonts' -Name $_.Name -Value \"$fontDir\\$($_.Name)\" -Force | Out-Null",
            "   Copy-Item $_.Fullname -Destination \"$fontDir\"",
            "}"
        ]
    },
    "pre_install": [
        "Move-Item -Path \"$dir\\BizinGothicNF_v$version\\*\" -Destination \"$dir\"",
        "Remove-Item -Path \"$dir\\BizinGothicNF_v$version\" -Force"
    ],
    "uninstaller": {
        "script": [
            "Get-ChildItem $dir -filter 'BizinGothicDiscordNF*.ttf' | ForEach-Object {",
            "   $fontDir = \"$env:LocalAppData\\Microsoft\\Windows\\Fonts\"",
            "   Remove-ItemProperty -Path 'HKCU:\\Software\\Microsoft\\Windows NT\\CurrentVersion\\Fonts' -Name $_.Name -Force -ErrorAction SilentlyContinue",
            "   Remove-Item \"$fontDir\\$($_.Name)\" -Force -ErrorAction SilentlyContinue",
            "}"
        ]
    },
    "url": "https://github.com/yuru7/bizin-gothic/releases/download/v0.0.4/BizinGothicNF_v0.0.4.zip"
}
